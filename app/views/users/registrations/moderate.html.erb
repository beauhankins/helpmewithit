<h1>Users</h1>

<%= link_to("All Users", :action => "moderate") %>
<%= link_to("Users awaiting approval", :action => "moderate", :approved => "false") %>

<table>
	<tr>
	  <th>Email</th>
	  <th>Approved?</th>
	</tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %> </td>
      <td><%= user.email %> </td>
      <td><%= user.approved %> </td>
      <td><%= link_to("Approve", approve_user_path(user.id)) %></td>
    </tr>
  <% end %>
</table>